{
  "$schema": "https://www.krakend.io/schema/v3.json",
  "version": 3,
  "name": "This is my favorite config",
  "project": "pvdts",
  "port": 8080,
  "cache_ttl": "0s",
  "timeout": "2s",
  "idle_timout": "0s",
  "max_idle_connections": 0,
  "output_encoding": "json",
  "debug_endpoint": false,
  "sequential_start": false,
  "endpoints": [],
  "async_agent": {},
  "extra_config": {
    "router": {
      "return_error_msg": true
    },
    "telemetry/logging": {
      "level": "DEBUG",
      "prefix": "[KRAKEND]",
      "format": "default",
      "syslog": false,
      "stdout": true
    },
    "telemetry/metrics": {
      "collection_time": "60s",
      "proxy_disabled": false,
      "router_disabled": false,
      "backend_disabled": false,
      "endpoint_disabled": false,
      "listen_address": 8090
    },
    "security/http": {
      "frame_deny": true,
      "referrer_policy": "same-origin",
      "content_type_nosniff": true,
      "browser_xss_filter": true,
      "content_security_policy": "default-src 'self';"
    },
    "security/cors": {
      "allow_origins": [
        "*"
      ],
      "allow_methods": [
        "GET",
        "POST",
        "PATCH",
        "PUT",
        "DELETE"
      ],
      "allow_headers": [
        "Origin",
        "Authorization",
        "Content-Type"
      ],
      "expose_headers": [
        "Content-Length",
        "X-Response-Time"
      ],
      "max_age": "12h"
    }
  }
}