{
  "compilerOptions": {
    "lib": ["es5", "es6"],
    "target": "ES2015",
    "module": "CommonJS",
    "moduleResolution": "node",
    "outDir": "./lib",
    "skipLibCheck": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "strict": true
  },
  "include": ["src"],
  "exclude": ["node_modules"],
  "ts-node": {
    "swc": true
  }
}